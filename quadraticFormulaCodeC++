#include <iostream>
#include <cmath>

int main() { 
  float a;
  float b;
  float c;
// initialize variables

  std::cout << "Enter a: \n";
  std::cin >> a;
  std::cout << "Enter b: \n";
  std::cin >> b;
  std::cout << "Enter c: \n";
  std::cin >> c;
// input of user numbers

  float root1 = (-b + std::sqrt(b*b-4*a*c))/(2*a); // addition quadratic
  float root2 = (-b - std::sqrt(b*b-4*a*c))/(2*a); // subtraction quadratic


  std::cout << "Root 1 is equal to: " << root1 << std::endl;
  std::cout << "Root 2 is equal to: " << root2 << std::endl;
  std::cout << "a = " << a;
  std::cout << std::endl;
  std::cout << "b = " << b;
  std::cout << std::endl;
  std::cout << "c = " << c;
  std::cout << std::endl;
  // output with answers as well as what the variable inputs were
  
  return 0;
}
